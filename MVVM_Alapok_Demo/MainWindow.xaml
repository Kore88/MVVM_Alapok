<Window x:Class="MVVM_Alapok_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Alapok_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <DataGrid x:Name="dgRacs"
                  Width="200"
                  Height="150"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név"></DataGridTextColumn>
                <DataGridTextColumn Header="Ország"></DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>
        <Button x:Name="btnUj"
                    Content="Új jelentkező"
                    HorizontalAlignment="Right"
                    VerticalAlignment="top"
                    Margin="0,10,10,0" Click="btnUj_Click"></Button>
    </Grid>
</Window>
